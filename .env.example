# Example environment configuration for Lambda Log Analyzer
# Copy this file to .env and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1

# S3 Configuration
LOG_BUCKET=my-company-logs
LOG_PREFIX=logs/

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:log-analyzer-alerts

# Email Configuration (SES)
EMAIL_FROM=alerts@company.com
EMAIL_TO=admin@company.com,ops@company.com

# Threshold Configuration
MAX_ERRORS=10
TIME_WINDOW_MINUTES=15
MAX_AVG_RESPONSE_TIME=5000
MAX_P95_RESPONSE_TIME=10000
MAX_MEMORY_PERCENT=85.0
MAX_DISK_PERCENT=90.0

# Alert Configuration
ALERT_COOLDOWN_MINUTES=30

# Analysis Configuration
LOOKBACK_MINUTES=60
BATCH_SIZE=1000

# Debug Configuration (optional)
DEBUG_MODE=false
